@model User
@{
    ViewData["Title"] = "LogIn";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/signin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GAS.styles.css" asp-append-version="true" />
</head>

<main class="form-signin">
        @*@<img class="mb-4" src="/docs/{{< param docs_version >}}/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">*@
        <h1 class="h3 mb-3 fw-normal">Welcome to GAS</h1>

        @using (Html.BeginForm("LogIn", "Home", FormMethod.Post)){
        <div class="form-group">
                @*<input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email address</label>*@
                @Html.LabelFor(model => model.Username)
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
            </div>
        <div class="form-group">
                @*<input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>*@
                @Html.LabelFor(model => model.Password)
                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Log In</button>
        }
        @if (ViewData.ModelState.Count > 0)
        {
            <div class="alert alert-danger mt-3" role="alert">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <span>@error.ErrorMessage</span>
                    <br />
                }
            </div>
        }
        <p class="mt-5 mb-3 text-muted">&copy;GAS</p>
</main>

<script>
    $(function () {
        // Show the alert message when there is a ModelState error
        if ($(".alert-danger").length) {
            alert("Invalid username or password");
        }
    });
</script>
